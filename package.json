{
  "name": "utility",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "test": "jest --coverage",
    "tsc-check": "tsc --noEmit",
    "lint": "prettier --check . && eslint src --ignore-path .gitignore",
    "lint:fix": "prettier --write . && eslint src --fix --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vidga1/Utility.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Vidga1/Utility/issues"
  },
  "homepage": "https://github.com/Vidga1/Utility#readme",
  "devDependencies": {
    "@babel/core": "7.23.0",
    "@babel/preset-env": "7.22.20",
    "@babel/preset-typescript": "^7.23.0",
    "@types/jest": "^29.5.7",
    "@types/react": "^18.2.37",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "babel-jest": "29.7.0",
    "eslint": "8.50.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jest": "27.4.0",
    "firebase-tools": "^12.9.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-localstorage-mock": "2.4.26",
    "lint-staged": "14.0.1",
    "prettier": "3.0.3"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{css,md}": "prettier --write",
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {
    "@babel/polyfill": "7.12.1",
    "@firebase/firestore": "^4.3.2",
    "codecov": "3.8.3",
    "core-js": "3.32.2",
    "firebase": "^10.6.0",
    "regenerator-runtime": "0.14.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  }
}
